    <!-- Add Header Label -->
    <Label text="Registrar Cliente " GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>



    <!-- Add Name Label -->
    <Label text="Nombre" GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <!-- Add Email Label -->
    <Label text="Identificacion" GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />



    <!-- Add Password Label -->
    <Label text="Fecha nacimiento" GridPane.rowIndex="3">
    </Label>
    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   <Label text="Edad" GridPane.rowIndex="4" />
   <Label text="Direccion" GridPane.rowIndex="5" />
   <Button fx:id="submitButton1" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="10" />
   <TextField fx:id="emailField1" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <TextField fx:id="emailField2" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
